<!DOCTYPE html>
<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="/assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <% include ../partialA/head %>
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <% include ../partialA/aside %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <% include ../partialA/nav %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl container-p-y">
              <div class="row mx-auto">
                <div class="col-lg-2"></div>
                <div class="col-lg-6 col-md-4 order-1">
                  <div class="row">
                    <div class="col-xl">
                      <div class="card mb-4">
                        <div
                          class="card-header d-flex justify-content-between align-items-center"
                        >
                          <h5 class="mb-0">Shop Update</h5>
                        </div>
                        <div class="card-body">
                          <form
                            action="/admin/shopupdate"
                            method="post"
                            enctype="multipart/form-data"
                          >
                            <input
                              type="hidden"
                              name="uid"
                              value="<%= shop._id %>"
                            />
                            <div class="mb-3">
                              <label
                                class="form-label"
                                for="basic-icon-default-fullname"
                                >Full Name</label
                              >
                              <div class="input-group input-group-merge">
                                <span
                                  id="basic-icon-default-fullname2"
                                  class="input-group-text"
                                  ><i class="bx bx-buildings"></i
                                ></span>
                                <input
                                  type="text"
                                  class="form-control"
                                  id="basic-icon-default-fullname"
                                  value="<%= shop.name %>"
                                  aria-label="Shop Name"
                                  name="name"
                                  aria-describedby="basic-icon-default-fullname2"
                                />
                              </div>
                            </div>
                            <div class="mb-3">
                              <label
                                class="form-label"
                                for="basic-icon-default-company"
                                >Address</label
                              >
                              <div class="input-group input-group-merge">
                                <span
                                  id="basic-icon-default-company2"
                                  class="input-group-text"
                                  ><i class="bx bx-location-plus"></i
                                ></span>
                                <input
                                  type="text"
                                  id="basic-icon-default-company"
                                  class="form-control"
                                  value="<%= shop.address %>"
                                  aria-label="Address"
                                  name="address"
                                  aria-describedby="basic-icon-default-company2"
                                />
                              </div>
                            </div>
                            <div class="mb-3">
                              <label
                                class="form-label"
                                for="basic-icon-default-phone"
                                >Phone No</label
                              >
                              <div class="input-group input-group-merge">
                                <span
                                  id="basic-icon-default-phone2"
                                  class="input-group-text"
                                  ><i class="bx bx-phone"></i
                                ></span>
                                <input
                                  type="text"
                                  id="basic-icon-default-phone"
                                  class="form-control phone-mask"
                                  value="<%= shop.phone %>"
                                  aria-label="658 799 8941"
                                  name="phone"
                                  aria-describedby="basic-icon-default-phone2"
                                />
                              </div>
                            </div>
                            <div class="mb-3">
                              <label for="formFile" class="form-label"
                                >Profile Image
                                <small
                                  >( If you don't update this, don't upload here
                                  )</small
                                ></label
                              >
                              <input
                                class="form-control"
                                type="file"
                                id="formFile"
                                name="profile"
                              />
                            </div>
                            <div class="mb-3">
                              <label for="formFile" class="form-label"
                                >Background Image
                                <small
                                  >( If you don't update this, don't upload here
                                  )</small
                                ></label
                              >
                              <input
                                class="form-control"
                                type="file"
                                id="formFile"
                                name="background"
                              />
                            </div>
                            <button type="submit" class="btn btn-primary">
                              Send
                            </button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->

            <% include ../partialA/footer %>

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    <% include ../partialA/script %>
  </body>
</html>
