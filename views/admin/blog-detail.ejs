<!DOCTYPE html>
<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="/assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <% include ../partialA/head %>
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <% include ../partialA/aside %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <% include ../partialA/nav %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <div class="row">
                <div class="card">
                  <h5 class="card-header">Blog Detail</h5>
                  <div class="card-body">
                    <h4 class="card-title text-center"><%= blog.title %></h4>
                    <p><strong><%= blog.content %></strong></p>
                    <div class="row">
                      <div class="col-sm-3 col-lg-4"></div>
                      <div class="col-sm-6 col-lg-4">
                        <div class="card">
                          <div class="card-header">Main Image</div>
                          <img
                            class="card-img-top"
                            src="<%= blog.mainImg %>"
                            alt="Card image cap"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row mt-2">
                      <div class="col-sm-3 col-lg-2">
                        <div class="card bg-primary text-white text-center p-1">
                          <div><%= blog.shopId.name %></div>
                        </div>
                      </div>
                      <div class="col-sm-3 col-lg-2">
                        <div class="card bg-primary text-white text-center p-1">
                          <div><%= blog.categoryId.name %></div>
                        </div>
                      </div>
                      <div class="col-sm-3 col-lg-2">
                        <div class="card bg-warning text-white text-center p-1">
                          <div><%= blog.ageArrange %></div>
                        </div>
                      </div>
                      <div class="col-sm-3 col-lg-2">
                        <div class="card bg-warning text-white text-center p-1">
                          <div><%= blog.bmi %></div>
                        </div>
                      </div>
                      <div class="col-sm-3 col-lg-2">
                        <div class="card bg-warning text-white text-center p-1">
                          <div><%= blog.size %></div>
                        </div>
                      </div>
                      <div class="col-sm-3 col-lg-2">
                        <div class="card bg-warning text-white text-center p-1">
                          <div><%= blog.gender %></div>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <!-- Bootstrap carousel -->
                      <div class="col-md-4"></div>
                      <div class="col-md-4">
                        <h5 class="my-4">More Images</h5>

                        <div
                          id="carouselExample"
                          class="carousel slide"
                          data-bs-ride="carousel"
                        >
                          <ol class="carousel-indicators">
                            <% for(var i = 0 ; i < blog.moreImg.length; i++){%>
                            <li
                              data-bs-target="#carouselExample"
                              data-bs-slide-to="<%= i %>"
                              class="<%= i == 0 ? 'active':'' %>"
                              aria-current="true"
                            ></li>
                            <%}%>
                          </ol>
                          <div class="carousel-inner">
                            <% for(var j = 0; j < blog.moreImg.length; j++){%>
                            <div
                              class="carousel-item <%= j == 0 ? 'active':'' %>"
                            >
                              <img
                                class="d-block w-100"
                                src="<%= blog.moreImg[j] %>"
                                alt="First slide"
                              />
                            </div>
                            <%}%>
                          </div>
                          <a
                            class="carousel-control-prev"
                            href="#carouselExample"
                            role="button"
                            data-bs-slide="prev"
                          >
                            <span
                              class="carousel-control-prev-icon"
                              aria-hidden="true"
                            ></span>
                            <span class="visually-hidden">Previous</span>
                          </a>
                          <a
                            class="carousel-control-next"
                            href="#carouselExample"
                            role="button"
                            data-bs-slide="next"
                          >
                            <span
                              class="carousel-control-next-icon"
                              aria-hidden="true"
                            ></span>
                            <span class="visually-hidden">Next</span>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-md d-grid">
                        <a
                          href="/admin/blogupdate/<%= blog._id %>"
                          class="btn btn-warning btn-block"
                          >Update</a
                        >
                      </div>
                      <div class="col-md d-grid">
                        <button
                          onclick="delBlog('<%= blog._id %>')"
                          class="btn btn-danger btn-block"
                        >
                          Delete
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->

            <% include ../partialA/footer %>

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    <% include ../partialA/script %>
  </body>
  <script src="/javascripts/sweetalert2.all.min.js"></script>
  <script>
    function delBlog(id) {
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax("/admin/blogdelete", {
            method: "POST",
            data: { id: id },
            success: function (result) {
              if (result.status == "done") {
                Swal.fire(
                  "Deleted!",
                  "Your file has been deleted.",
                  "success"
                ).then(() => {
                  location.href = "/admin/bloglist";
                });
              } else {
                Swal.fire("Delete Error!", "Somethings was wrong", "error");
              }
            },
          });
        }
      });
    }
  </script>
</html>
