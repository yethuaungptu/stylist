<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/vendor/remi/fonts/remixicon.css" />
    <link rel="stylesheet" href="/vendor/slick/slick.css" />
    <link rel="stylesheet" href="/vendor/slick/slick-theme.css" />
    <link rel="stylesheet" href="/assets2/style.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row mt-5">
        <div class="col-md-4 col-xl-2 d-xl-block d-md-none d-none user-sidebar">
          <div class="card shadow-lg border-0">
            <a href="/" class="float-end m-2 mb-0 p-2 anone">
              <i class="ri-home-7-line h4 text-danger"></i>
            </a>
            <div class="text-center mb-5 pt-5">
              <img
                src="<%= user.gender == 'male' ? '/assets2/img/yb2.jpg':'/assets2/img/1.jpg' %>"
                class="profile-img"
                alt=""
              />
            </div>
            <div class="text-center">
              <p class="h4 text-color"><%= user.name %></p>
            </div>
            <a
              href="/myprofile"
              class="btn btn-outline-danger col-11 m-auto border-start-0 border-end-0 border-bottom-0 my-2"
              >For you</a
            >
            <a
              href="/editmyprofile"
              class="btn btn-outline-danger col-11 m-auto border-start-0 border-end-0 border-bottom-0 mb-2"
              >User Information</a
            >
            <a
              href="/recomandshop"
              class="btn btn-outline-danger col-11 m-auto border-start-0 border-end-0 border-bottom-0 mb-2"
              >Recomanded Shop</a
            >
            <a
              href="/logout"
              class="btn btn-outline-danger col-11 m-auto border-start-0 border-end-0 mb-2"
              >Logout</a
            >
          </div>
        </div>
        <div class="col-12 col-md-12 col-xl-9 p-md-0 user-content scroll">
          <div class="toggle d-inline d-xl-none">
            <span class="anone">
              <i class="ri-menu-2-fill user-menu-icon h2"></i>
            </span>
          </div>
          <div class="collection">
            <div class="row">
              <div class="col-12 text-center">
                <div class="text-color">
                  <h3 class="mb-3">Your Collections</h3>
                  <div class="">
                    <ul class="coll-tab d-flex justify-content-center">
                      <% for(var i = 0; i < category.length; i++){%>
                      <li
                        class="m-3 coll-tab-item <%= i == 0 ? 'active':''%>"
                        data-target="#tab<%= i%>"
                      >
                        <%= category[i].name %>
                      </li>
                      <%}%>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-12 coll-section">
                <% for(var j = 0; j < category.length; j++){%>
                <div
                  class="coll-tab-content <%= j == 0 ? 'active':''%>"
                  id="tab<%= j%>"
                >
                  <div class="container p-md-5">
                    <div class="row">
                      <% let current = collection.filter(che); function
                      che(value){ return value._id.categoryId.toString() ==
                      category[j]._id.toString()} %> <% if(current.length > 0){
                      for(var k = 0; k < current[0].data.length; k++){ if(k ==
                      6) break;%>
                      <div
                        class="col-12 wow animate__bounceOut col-xl-4 col-md-6 p-xl-5 p-md-4 mb-5 mb-md-0"
                      >
                        <div class="card shadow-lg border-0">
                          <div class="coll-img col-12">
                            <img
                              src="<%= current[0].data[k].mainImg %>"
                              alt=""
                            />
                          </div>
                          <div class="text-center coll-footer">
                            <%= current[0].data[k].title %>
                          </div>
                        </div>
                      </div>
                      <%}}%>
                    </div>
                  </div>
                </div>
                <%}%>
              </div>
            </div>
          </div>
          <div class="">
            <div class="h3 p-2 text-center my-3 my-md-3 text-color">
              New Arrival
            </div>
            <% if(newArr.length == 5){%>
            <div class="row mb-4 mt-5 arrival">
              <div class="col-md-5 col-12">
                <div class="row">
                  <div class="col-md-12 col-12">
                    <div class="card mb-2">
                      <div
                        class="position-absolute btn btn-danger border-0 rounded-3 end-0 me-2 mt-2"
                      >
                        sale
                      </div>
                      <img src="<%= newArr[0].mainImg%>" alt="" />
                    </div>
                  </div>
                  <div class="col-md-6 col-12">
                    <div class="card mb-2">
                      <img src="<%= newArr[1].mainImg%>" alt="" />
                    </div>
                  </div>
                  <div class="col-md-6 col-12">
                    <div class="card mb-2">
                      <div
                        class="position-absolute btn btn-danger border-0 rounded-3 end-0 me-2 mt-2"
                      >
                        sale
                      </div>
                      <img src="<%= newArr[2].mainImg%>" alt="" />
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-3 p-md-0">
                <div class="row">
                  <div class="col-md-12 col-12">
                    <div class="card mb-2">
                      <img src="<%= newArr[3].mainImg%>" alt="" />
                    </div>
                  </div>
                  <div class="col-md-12 col-12">
                    <div class="card mb-2">
                      <div
                        class="position-absolute btn btn-danger border-0 rounded-3 end-0 me-2 mt-2"
                      >
                        sale
                      </div>
                      <img src="<%= newArr[4].mainImg%>" alt="" />
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%}else{%>
            <h4 class="text-center">New Arrival will show more than 4 blog</h4>
            <%}%>
          </div>
          <div class="trending">
            <div class="row">
              <div class="col-12">
                <div class="text-center h3 text-color">Trendings</div>
              </div>
              <div class="container p-md-5">
                <div class="row user-trending-slick">
                  <% for(var i = 0; i < trending.length; i++){%>
                  <div class="col-md-4 col-12 col-xl-3 p-md-2">
                    <div class="card shadow-lg">
                      <img src="<%= trending[i].mainImg %>" alt="" />
                      <div class="card-footer">
                        <p class="h5"><%= trending[i].name %></p>

                        <p><%= trending[i].estPrice %> MMK</p>
                      </div>
                    </div>
                  </div>
                  <%}%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="/vendor/bootstrap/css/bootstrap.min.css"></script>
  <script src="/vendor/jQuery/jquery.min.js"></script>
  <script src="/vendor/slick/slick.min.js"></script>
  <script src="/assets2/app.js"></script>
</html>
